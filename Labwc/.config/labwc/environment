# Set keyboard layout to English
XKB_DEFAULT_LAYOUT=us

# Set two keyboard layouts and toggle between them using alt+shift
XKB_DEFAULT_LAYOUT=us,ru
XKB_DEFAULT_OPTIONS=grp:alt_shift_toggle

#Default apps
EDITOR=nano
BROWSER=firefox

# Force firefox to use wayland backend
MOZ_ENABLE_WAYLAND=1

# Force Qt5 apps to use Wayland
QT_QPA_PLATFORM=wayland-egl

# Force EFL apps to use Wayland
ECORE_EVAS_ENGINE="wayland_egl"
ELM_ACCEL="gl"

# Java XWayland blank screens fix
_JAVA_AWT_WM_NONREPARENTING=1

# Set cursor theme.
# Find icons themes with the command below or similar:
#     find /usr/share/icons/ -type d -name "cursors"
XCURSOR_THEME=breeze_cursors 
